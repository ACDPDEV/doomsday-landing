---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Trailer from "../components/Trailer.astro";
import Footer from "../components/Footer.astro";

const characters = [
    { name: "Steve Rogers (Chris Evans)", image: "steve_rogers.png" },
    { name: "Steve Rogers Son (???)", image: null },
    { name: "Thor (Chris Hemsworth)", image: "thor.png" },
    { name: "Love (Rose Hemsworth)", image: "love.png" },
    { name: "Professor X (Patrick Stewart)", image: "profesor_x.png" },
    { name: "Magneto (Ian McKellen)", image: "magneto.png" },
    { name: "Cyclops (James Marsden)", image: "cyclops.png" },
    { name: "Shuri (Letitia Wright)", image: "shuri.png" },
    { name: "Namor (Tenoch Huerta)", image: "namor.png" },
    { name: "Namora (Mabel Cadena)", image: "namora.png" },
    { name: "M'Baku (Winston Duke)", image: "mbaku.png" },
    { name: "Thing (Ebon Moss-Bachrach)", image: "thing.png" },
];

const trailers = [
    {
        id: 1,
        videoId: "UiMg566PREA",
        background: "trailer1_bg.jpg",
        phrase: "Steve Rogers Will Return In Avengers: Doomsday",
        characters: [characters[0], characters[1]],
    },
    {
        id: 2,
        videoId: "1clWprLC5Ak",
        background: "trailer2_bg.jpg",
        phrase: "Thor Will Return In Avengers: Doomsday",
        characters: [characters[2], characters[3]],
    },
    {
        id: 3,
        videoId: "kH1XlwHQv9o",
        background: "trailer3_bg.jpg",
        phrase: "The X-Men Will Return In Avengers: Doomsday",
        characters: [characters[4], characters[5], characters[6]],
    },
    {
        id: 4,
        videoId: "399Ez7WHK5s",
        background: "trailer4_bg.jpg",
        phrase: "The Wakandian And Fantastic Four Will Return In Avengers: Doomsday",
        characters: [
            characters[7],
            characters[8],
            characters[9],
            characters[10],
            characters[11],
        ],
    },
];
---

<Layout lang="en">
    <Hero lang="en" />

    {
        trailers.map((trailer) => (
            <Trailer
                id={trailer.id}
                videoId={trailer.videoId}
                background={trailer.background}
                phrase={trailer.phrase}
                characters={trailer.characters}
                lang="en"
            />
        ))
    }

    <Footer lang="en" />
</Layout>
